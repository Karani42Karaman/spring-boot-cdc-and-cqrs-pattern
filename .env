## Shared

TZ=Europe/Istanbul

# Container restart policy
# Defaults to unless-stopped
RESTART_POLICY=unless-stopped

SERVICE_IMAGE_TAG=1.0.0

## App
SERVER_PORT=9090
API_BASE_PATH:/api

MONGODB_HOST=mongodb-primary
MONGODB_PORT=27017

OPENAPI_TITLE=Spring Boot Reactive City REST API
OPENAPI_DESCRIPTION=Provides access to the core features of Spring Boot Reactive City Rest Api.
OPENAPI_VERSION=1.0.0
OPENAPI_TERMS-OF-SERVICE-URL=http://swagger.io/terms/
OPENAPI_LICENCE=Apache 2.0
OPENAPI_LICENCE_URL=http://springdoc.org

PROBLEM_FIELD_ERRORS_KEY=fieldErrors
PROBLEM_MESSAGE_KEY=message
PROBLEM_PATH_KEY=path
PROBLEM_VIOLATIONS_KEY=violations
PROBLEM_ERROR_VALIDATION=error.validation
PROBLEM_BASE_URL=https://www.spring.test/problem
PROBLEM_UNEXPECTED_ERROR_PACKAGE_LIST=org., java., net., javax., com., io., de., com.spring.reactive

## Denormalizer
DENORMALIZER_SERVER_PORT=9091
KAFKA_HOST=kafka
KAFKA_PORT=9092
KAFKA_TOPICS=dbserver.demo.cities
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

## Mongodb
MONGO_IMAGE_TAG=4.4
MONGODB_USERNAME=admin
MONGODB_PASSWORD=root
MONGODB_DATABASE=demo
MONGODB_ROOT_PASSWORD=root
MONGODB_REPLICA_SET_NAME=rs0
MONGODB_REPLICA_SET_KEY=replicasetkey123
MONGODB_INITIAL_PRIMARY_HOST=mongodb-primary
MONGODB_INITIAL_PRIMARY_PORT_NUMBER=27017
MONGODB_INITIAL_PRIMARY_ROOT_PASSWORD=root

## Elasticsearch
ELASTIC_IMAGE_TAG=7.10.2
discovery.type=single-node
ES_JAVA_OPTS= -Xms512m -Xmx512m

## Kibana
ELASTICSEARCH_URL=http://elasticsearch:9200

## Zookeeper
ZOOKEEPER_IMAGE_TAG=3
ALLOW_ANONYMOUS_LOGIN=yes

## Kafka
KAFKA_IMAGE_TAG=2
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_BROKER_ID=1
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
ALLOW_PLAINTEXT_LISTENER=yes

## Kafdrop
KAFDROP_IMAGE_TAG=3.27.0
KAFKA_BROKERCONNECT=kafka:9092
JVM_OPTS= -Xms16M -Xmx48M -Xss180K -XX:-TieredCompilation -XX:+UseStringDeduplication -noverify

## Debezium
DEBEZIUM_IMAGE_TAG=1.4
GROUP_ID=1
BOOTSTRAP_SERVERS=kafka:9092
CONFIG_STORAGE_TOPIC=connect_configs
OFFSET_STORAGE_TOPIC=connect_offsets
STATUS_STORAGE_TOPIC=connect_statuses